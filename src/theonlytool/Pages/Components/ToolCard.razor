<a href="@GetLink()">
    <MudPaper Outlined="true" Class="pa-2 rounded-lg d-flex flex-column">
        <MudPaper Elevation="0" Class="rounded-lg docs-gray-bg explore-card" role="img" aria-label="Component visualization">
            <div class="d-flex justify-center align-center relative pa-8 mud-height-full mud-width-full">
                @ChildContent
            </div>
        </MudPaper>
        <MudText Typo="Typo.subtitle2" Class="mt-3">@Title</MudText>
    </MudPaper>
</a>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Link { get; set; } = string.Empty;
    [Parameter] public RenderFragment ChildContent { get; set; } = null!;

    private string GetLink()
    {
        return string.IsNullOrEmpty(Link) ? $"/tools/{Title.Replace(" ", "").ToLowerInvariant()}" : Link;
    }
}